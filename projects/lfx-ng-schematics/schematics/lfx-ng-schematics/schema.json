{
  "$schema": "http://json-schema.org/schema",
  "$id": "lfx-ng-schematics",
  "title": "LFX Schematics schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of the component",
      "type": "string",
      "x-prompt": "Name of new component",
      "default": "lfx-new-component"
    },
    "path": {
      "description": "Path to new component",
      "type": "string",
      "format": "path",
      "x-prompt": "Path to new component",
      "default": "src/app"
    }
  }
}
